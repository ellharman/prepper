{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "className": {
      "type": "string"
    },
    "personalDetails": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "pronouns": {
          "type": "string"
        },
        "exampleNames": {
          "type": "string"
        },
        "look": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "pronouns",
        "exampleNames",
        "look"
      ]
    },
    "stats": {
      "type": "object",
      "properties": {
        "damageStats": {
          "type": "object",
          "properties": {
            "armor": {
              "type": "integer"
            },
            "damage": {
              "type": "integer"
            },
            "hitPoints": {
              "type": "integer"
            },
            "hitPointsBase": {
              "type": "integer"
            },
            "hitPointsMod": {
              "type": "string"
            }
          },
          "required": [
            "armor",
            "damage",
            "hitPoints",
            "hitPointsBase",
            "hitPointsMod"
          ]
        },
        "statBlock": {
          "type": "object",
          "properties": {
            "strength": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            },
            "dexterity": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            },
            "constitution": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            },
            "intelligence": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            },
            "wisdom": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            },
            "charisma": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2
            }
          },
          "minProperties": 6,
          "required": [
            "strength",
            "dexterity",
            "constitution",
            "intelligence",
            "wisdom",
            "charisma"
          ]
        },
        "toAssign": {
          "type": "array",
          "items": { "type": "array" },
          "minItems": 6
        },
        "recommended": {
          "type": "array",
          "items": true
        },
        "statNameReplacements": {
          "type": "object",
          "properties": {
            "strength": {
              "type": "string"
            },
            "dexterity": {
              "type": "string"
            },
            "constitution": {
              "type": "string"
            },
            "intelligence": {
              "type": "string"
            },
            "wisdom": {
              "type": "string"
            },
            "charisma": {
              "type": "string"
            }
          },
          "required": [
            "strength",
            "dexterity",
            "constitution",
            "intelligence",
            "wisdom",
            "charisma"
          ]
        }
      },
      "required": [
        "damageStats",
        "statBlock",
        "toAssign",
        "recommended"
      ]
    },
    "alignments": {
      "type": "array",
      "items": true
    },
    "bonds": {
      "type": "array",
      "items": true
    },
    "backgrounds": {
      "type": "array",
      "items": true
    },
    "races": {
      "type": "array",
      "items": true
    },
    "deathMove": {
      "type": "string"
    },
    "currency": {
      "type": "array",
      "items": true
    },
    "load": {
      "type": "object",
      "properties": {
        "loadBase": {
          "type": "integer"
        },
        "loadMod": {
          "type": "integer"
        },
        "currentLoad": {
          "type": "integer"
        }
      },
      "required": [
        "loadBase",
        "loadMod",
        "currentLoad"
      ]
    },
    "expStats": {
      "type": "object",
      "properties": {
        "level": {
          "type": "integer"
        },
        "XP": {
          "type": "integer"
        }
      },
      "required": [
        "level",
        "XP"
      ]
    },
    "inventory": {
      "type": "object",
      "properties": {
        "starterItems": {
          "type": "array",
          "items": true
        },
        "inventoryText": {
          "type": "string"
        }
      },
      "required": [
        "starterItems",
        "inventoryText"
      ]
    },
    "moves": {
      "type": "object",
      "properties": {
        "startingMoves": {
          "type": "array",
          "items": true
        },
        "advancedMoves": {
          "type": "array",
          "items": true
        },
        "masterMoves": {
          "type": "array",
          "items": true
        }
      },
      "required": [
        "startingMoves",
        "advancedMoves",
        "masterMoves"
      ]
    }
  },
  "required": [
    "className",
    "personalDetails",
    "stats",
    "alignments",
    "bonds",
    "backgrounds",
    "races",
    "deathMove",
    "currency",
    "load",
    "expStats",
    "inventory",
    "moves"
  ]
}